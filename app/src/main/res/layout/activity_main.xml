<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgroundazul">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logovidro" />

        <ImageButton
            android:id="@+id/bt_tiposdeVidro"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="88dp"
            android:contentDescription="Selecionar tipo de vidro"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toStartOf="@id/bt_Espelho"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            app:srcCompat="@drawable/tipodevidro" />

        <ImageButton
            android:id="@+id/bt_Espelho"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:contentDescription="Selecionar tipo de vidro"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@id/bt_tiposdeVidro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/bt_tiposdeVidro"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/espelho" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Vidros"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/bt_tiposdeVidro"
            app:layout_constraintStart_toStartOf="@id/bt_tiposdeVidro"
            app:layout_constraintEnd_toEndOf="@id/bt_tiposdeVidro" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Espelhos"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/bt_Espelho"
            app:layout_constraintStart_toStartOf="@id/bt_Espelho"
            app:layout_constraintEnd_toEndOf="@id/bt_Espelho" />

        <ImageButton
            android:id="@+id/bt_abrirMapa"
            android:layout_width="177dp"
            android:layout_height="139dp"
            android:layout_marginTop="16dp"
            android:contentDescription="Abrir Mapa"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView3"
            app:srcCompat="@drawable/maps" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Clique no Maps\npara\nNossa Localização e Telefone"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/bt_abrirMapa"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="369dp"
            android:layout_height="49dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Clique em uma das opções a baixo para efetuar o orçamento"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
